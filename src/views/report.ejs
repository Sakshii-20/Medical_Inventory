<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>IMS Report</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    body {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      font-size: 14px;
      color: #333;
    }

    .navbar {
      background: linear-gradient(90deg, #f685a2 0%, #e25b85 100%);
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .navbar-brand {
      font-weight: bold;
      font-size: 22px;
      color: white !important;
      text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .btn-dashboard {
      background: white;
      color: #f685a2;
      font-size: 13px;
      font-weight: 600;
      border-radius: 20px;
      padding: 8px 16px;
      text-decoration: none;
      transition: all 0.3s ease;
      border: 1px solid #f685a2;
    }
    .btn-dashboard:hover {
      background: #f685a2;
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(246, 133, 162, 0.3);
    }

    .header {
      text-align: center;
      margin: 30px 0;
      padding: 20px;
      background: white;
      border-radius: 15px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }
    .header h1 {
      font-size: 32px;
      color: #f685a2;
      margin-bottom: 10px;
      font-weight: 700;
      text-shadow: 1px 1px 3px rgba(0,0,0,0.1);
    }
    .header p {
      font-size: 16px;
      color: #6c757d;
      margin-bottom: 20px;
    }
    .btn-download {
      background: linear-gradient(90deg, #f685a2 0%, #e25b85 100%);
      color: white;
      border: none;
      border-radius: 25px;
      padding: 10px 20px;
      font-weight: 600;
      transition: all 0.3s ease;
    }
    .btn-download:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 15px rgba(246, 133, 162, 0.4);
    }

    .stat-card {
      background: white;
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      padding: 20px;
      text-align: center;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      border: 1px solid #f0f0f0;
    }
    .stat-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    .stat-card i {
      font-size: 40px;
      color: #f685a2;
      margin-bottom: 10px;
    }
    .stat-card h5 {
      font-size: 16px;
      margin-bottom: 10px;
      color: #555;
      font-weight: 600;
    }
    .stat-card p {
      font-size: 24px;
      font-weight: bold;
      color: #f685a2;
    }

    .detail-section {
      margin-top: 40px;
    }
    .detail-section h4 {
      font-size: 20px;
      margin-bottom: 20px;
      color: #f685a2;
      font-weight: 700;
      text-align: center;
    }
    .detail-section .card {
      background: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.08);
      border: none;
      height: 100%;
    }
    .detail-section ul {
      list-style: none;
      margin: 0;
      padding: 0;
    }
    .detail-section ul li {
      font-size: 14px;
      padding: 8px 0;
      border-bottom: 1px solid #f0f0f0;
      display: flex;
      align-items: center;
    }
    .detail-section ul li i {
      margin-right: 10px;
      color: #f685a2;
    }
    .detail-section ul li:last-child {
      border-bottom: none;
    }

    .blank-space {
      height: 100px;
    }

    @media print {
      .btn-download, .navbar {
        display: none;
      }
      body {
        background: white !important;
      }
      .header, .stat-card, .detail-section .card {
        box-shadow: none !important;
        border: 1px solid #ddd !important;
      }
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container d-flex justify-content-between align-items-center">
      <a class="navbar-brand" href="/dashboard">MEDISTOCK</a>
      <a href="/dashboard" class="btn-dashboard"><i class="fas fa-arrow-left"></i> Dashboard</a>
    </div>
  </nav>

  <!-- Header -->
  <div class="header">
    <h1>Inventory Report</h1>
    <p>Summary & Key Details of Medical Inventory</p>
    <button onclick="window.print()" class="btn btn-sm btn-download"><i class="fas fa-download"></i> Download PDF</button>
  </div>

  <!-- Stats -->
  <div class="container">
    <div class="row g-4 justify-content-center">
      <div class="col-md-3">
        <div class="stat-card">
          <i class="fas fa-pills"></i>
          <h5>Total Medicines</h5>
          <p><%= report.totalMedicines %></p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <i class="fas fa-truck"></i>
          <h5>Total Suppliers</h5>
          <p><%= report.totalSuppliers %></p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <i class="fas fa-users"></i>
          <h5>Total Customers</h5>
          <p><%= report.totalCustomers %></p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-card">
          <i class="fas fa-chart-line"></i>
          <h5>Total Sales</h5>
          <p><%= report.totalSales %></p>
        </div>
      </div>
    </div>

    <!-- Short Details -->
    <div class="row detail-section">
      <div class="col-md-6">
        <div class="card">
          <h4>Suppliers</h4>
          <ul>
            <% suppliers.slice(0,5).forEach(s => { %>
              <li><i class="fas fa-building"></i><strong><%= s.name %></strong> - <%= s.contact %></li>
            <% }) %>
          </ul>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <h4>Medicines</h4>
          <ul>
            <% medicines.slice(0,5).forEach(m => { %>
              <li><i class="fas fa-capsules"></i><strong><%= m.name %></strong> (Batch: <%= m.batchNo %>)</li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>

    <div class="row detail-section">
      <div class="col-md-6">
        <div class="card">
          <h4>Customers</h4>
          <ul>
            <% customers.slice(0,5).forEach(c => { %>
              <li><i class="fas fa-user"></i><strong><%= c.name %></strong> - <%= c.contact %></li>
            <% }) %>
          </ul>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card">
          <h4>Recent Sales</h4>
          <ul>
            <% sales.slice(0,5).forEach(s => { %>
              <li><i class="fas fa-shopping-cart"></i><%= s.medicineId?.name %> â†’ <%= s.customerId?.name %> (Qty: <%= s.quantitySold %>)</li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="blank-space"></div>

</body>
</html>

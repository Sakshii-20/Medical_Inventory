<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Medicine - IMS</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    body {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #333;
    }

    .navbar {
      background: linear-gradient(90deg, #f685a2 0%, #e25b85 100%);
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    .navbar-brand {
      font-weight: bold;
      font-size: 24px;
      color: white !important;
      text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .header {
      text-align: center;
      margin: 40px 0 30px;
      padding: 20px;
      background: white;
      border-radius: 15px;
      box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }
    .header h1 {
      font-size: 36px;
      color: #f685a2;
      margin-bottom: 10px;
      font-weight: 700;
      text-shadow: 1px 1px 3px rgba(0,0,0,0.1);
    }
    .header p {
      font-size: 16px;
      color: #6c757d;
    }

    .form-container {
      background: white;
      padding: 40px;
      border-radius: 15px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      max-width: 900px;
      margin: auto;
      border: 1px solid #f0f0f0;
    }

    .form-label {
      font-weight: 600;
      color: #555;
      margin-bottom: 8px;
    }

    .form-control, .form-select {
      border-radius: 8px;
      border: 1px solid #ddd;
      padding: 10px 15px;
      font-size: 14px;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }
    .form-control:focus, .form-select:focus {
      border-color: #f685a2;
      box-shadow: 0 0 0 0.2rem rgba(246, 133, 162, 0.25);
    }

    .input-group-text {
      background: #f685a2;
      color: white;
      border: none;
      border-radius: 8px 0 0 8px;
    }

    .btn-submit {
      background: linear-gradient(90deg, #f685a2 0%, #e25b85 100%);
      border: none;
      color: white;
      padding: 12px 30px;
      font-weight: 600;
      border-radius: 25px;
      transition: all 0.3s ease;
      font-size: 16px;
    }
    .btn-submit:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(246, 133, 162, 0.4);
      background: linear-gradient(90deg, #e25b85 0%, #f685a2 100%);
    }

    .btn-back {
      background: #6c757d;
      border: none;
      color: white;
      padding: 12px 30px;
      border-radius: 25px;
      font-weight: 600;
      transition: all 0.3s ease;
      font-size: 16px;
      margin-left: 10px;
    }
    .btn-back:hover {
      background: #5a6268;
      transform: translateY(-2px);
      box-shadow: 0 6px 15px rgba(0,0,0,0.2);
    }

    .text-center.mt-4 {
      margin-top: 30px !important;
    }

    @media (max-width: 768px) {
      .form-container {
        padding: 20px;
      }
      .header h1 {
        font-size: 28px;
      }
    }
  </style>
</head>
<body>
  <!-- ðŸ”¹ Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="/">MEDISTOCK</a>
    </div>
  </nav>

  <!-- ðŸ”¹ Header -->
  <div class="header">
    <h1>Add New Medicine</h1>
    <p>Fill the details below to add medicine into the inventory</p>
  </div>

  <!-- ðŸ”¹ Form Card -->
  <div class="container form-container">
    <form action="/medicine/add" method="POST" class="row g-3">

      <div class="col-md-6">
        <label for="medicineId" class="form-label"><i class="fas fa-id-card"></i> Medicine ID</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
          <input type="text" class="form-control" id="medicineId" name="medicineId" required>
        </div>
      </div>

      <div class="col-md-6">
        <label for="name" class="form-label"><i class="fas fa-capsules"></i> Medicine Name</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-tag"></i></span>
          <input type="text" class="form-control" id="name" name="name" required>
        </div>
      </div>

      <div class="col-md-6">
        <label for="batchNo" class="form-label"><i class="fas fa-list-ol"></i> Batch Number</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-barcode"></i></span>
          <input type="text" class="form-control" id="batchNo" name="batchNo" required>
        </div>
      </div>

      <div class="col-md-6">
        <label for="manufacturer" class="form-label"><i class="fas fa-industry"></i> Manufacturer</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-building"></i></span>
          <input type="text" class="form-control" id="manufacturer" name="manufacturer" required>
        </div>
      </div>

      <div class="col-md-6">
        <label for="expiryDate" class="form-label"><i class="fas fa-calendar-alt"></i> Expiry Date</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-clock"></i></span>
          <input type="date" class="form-control" id="expiryDate" name="expiryDate" required>
        </div>
      </div>

      <div class="col-md-6">
        <label for="quantity" class="form-label"><i class="fas fa-boxes"></i> Quantity</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-cubes"></i></span>
          <input type="number" class="form-control" id="quantity" name="quantity" min="0" required>
        </div>
      </div>

      <div class="col-md-6">
        <label for="price" class="form-label"><i class="fas fa-rupee-sign"></i> Price (â‚¹)</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-money-bill-wave"></i></span>
          <input type="number" class="form-control" id="price" name="price" min="0" step="0.01" required>
        </div>
      </div>

      <div class="col-md-6">
        <label for="supplierId" class="form-label"><i class="fas fa-truck"></i> Supplier</label>
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
          <select class="form-select" id="supplierId" name="supplierId" required>
            <% if (suppliers && suppliers.length > 0) { %>
              <% suppliers.forEach(sup => { %>
                <option value="<%= sup._id %>"><%= sup.name %></option>
              <% }) %>
            <% } else { %>
              <option disabled>No suppliers found</option>
            <% } %>
          </select>
        </div>
      </div>

      <div class="col-12 text-center mt-4">
        <button type="submit" class="btn-submit"><i class="fas fa-plus"></i> Add Medicine</button>
        <a href="/medicine/view" class="btn-back"><i class="fas fa-arrow-left"></i> Back to List</a>
      </div>

    </form>
  </div>
</body>
</html>
